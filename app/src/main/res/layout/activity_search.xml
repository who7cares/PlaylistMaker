<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_background"
    android:orientation="vertical"
    android:padding="@dimen/screen_margins">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/text_small">

        <ImageView
            android:id="@+id/arrow_back_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:tint="@color/settings_back_icon"
            android:src="@drawable/arrow_back"
            android:layout_marginEnd="@dimen/screen_margins"/>

        <TextView
            android:fontFamily="@font/ys_display_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="@color/main_text"
            android:textSize="@dimen/text" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_textInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/search_textInputLayout"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/search"
        app:startIconTint="@color/search_icon_color"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"


        app:cursorColor="@color/cursorColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/main_text_buttons"
            android:textColorHint="@color/search_hint"
            android:hint="Поиск"
            android:textSize="@dimen/text_small"
            android:maxLines="1"
            android:drawablePadding="@dimen/search_drawablePadding"
            android:padding="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
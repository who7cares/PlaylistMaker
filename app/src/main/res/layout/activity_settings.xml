<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_margins" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/for_blocks">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/arrow_back"
            android:layout_marginEnd="@dimen/screen_margins"/>

        <TextView
            android:fontFamily="@font/ys_display_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="34dp">

        <TextView
            style="@style/text_settings_style"
            android:text="@string/dark_theme" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            android:textOff="OFF"
            android:textOn="ON"
            app:showText="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/for_blocks">

        <TextView
            style="@style/text_settings_style"
            android:text="@string/share_with_app" />

        <ImageView
            style="@style/imageView_settingsLayout"
            android:src="@drawable/share" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/for_blocks" >

        <TextView
            style="@style/text_settings_style"
            android:text="@string/support" />

        <ImageView
            style="@style/imageView_settingsLayout"
            android:src="@drawable/support" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/for_blocks" >

        <TextView
            style="@style/text_settings_style"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/imageView_settingsLayout"
            android:src="@drawable/arrow_forward" />

    </LinearLayout>

</LinearLayout>